{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <h1>Главные новости</h1>
    <div class="table-responsive">
        <table class="records_list table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Новость</th>
                    <th>Позиция</th>
                    <th>Дата создания</th>
                    <th>Дата редактирования</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
            {% for mainStory in mainStories %}
                <tr>
                    <td><a href="{{ path('admin_mainstory_show', { 'id': mainStory.id }) }}">{{ mainStory.id }}</a></td>
                    <td>{{ mainStory.position }}</td>
                    <td>{{ mainStory.story.post.title }}</td>
                    <td>{% if mainStory.createdAt %}{{ mainStory.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if mainStory.updatedAt %}{{ mainStory.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_mainstory_show', { 'id': mainStory.id }) }}">Показать</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_mainstory_edit', { 'id': mainStory.id }) }}">Редактировать</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <ul>
        <li>
            <a class="btn btn-outline-primary btn-fw" href="{{ path('admin_mainstory_new') }}">Создать запись</a>
        </li>
    </ul>
{% endblock %}
