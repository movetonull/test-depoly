{% extends 'admin/adminbase.html.twig' %}

{% block body -%}

<h4>Пользователь</h4>

<table class="table table-striped">
    <tbody>
        <tr>
            <th>ID</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Роль</th>
            <td>{{ entity.role }}</td>
        </tr>
        <tr>
            <th>Имя</th>
            <td>{{ entity.firstName }}</td>
        </tr>
        <tr>
            <th>Фамилия</th>
            <td>{{ entity.lastName }}</td>
        </tr>
        <tr>
            <th>Отчество</th>
            <td>{{ entity.patronymic }}</td>
        </tr>
        <tr>
            <th>Дата рождения</th>
            <td>{{ entity.dateBirth|date('d-m-Y') }}</td>
        </tr>
        <tr>
            <th>E-mail</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>Телефон</th>
            <td>{{ entity.phone }}</td>
        </tr>
        <tr>
            <th>Должность</th>
            <td>{{ entity.position }}</td>
        </tr>
        <tr>
            <th>Создано</th>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Обновлено</th>
            <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_user') }}">
            Назад к списку
        </a>
    </li>
    <li>
        <a href="{{ path('admin_user_edit', { 'id': entity.id }) }}">
            Редактировать
        </a>
    </li>

</ul>
    {{ form(delete_form) }}
{% endblock %}
