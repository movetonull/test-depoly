{% extends 'admin/adminbase.html.twig' %}
{% block stylesheets %}
<!-- <script src="https://cdn.ckeditor.com/4.14.1/standard/ckeditor.js"></script> -->
<script src="/js/ckeditor/ckeditor.js"></script>
{% endblock %}

{% block body -%}

<h4>Редактирование новости</h4>

{{ form(edit_form) }}

<ul class="record_actions">
    <li>
        <a href="{{ path('admin_post') }}">
            Назад к списку
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>

{% endblock %}

{% block javascripts %}
<script>
	CKEDITOR.config.height = 500; 
	CKEDITOR.config.allowedContent = true;
	CKEDITOR.replace( "appbundle_post_text" , {
		filebrowserUploadUrl: "/ck_upload.php?type=file",
        filebrowserImageUploadUrl: '/ck_upload.php?type=image',
        filebrowserUploadMethod: 'form',
        extraPlugins: 'video,quote,reference,related,tooltip'
    });
</script>
{% endblock %}
