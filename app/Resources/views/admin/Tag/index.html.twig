{% extends 'admin/adminbase.html.twig' %}

{% block body -%}
    <h1>Теги</h1>
    <div class="table-responsive">
        <table class="records_list table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Имя</th>
                    <th>Дата создания</th>
                    <th>Дата редактирования</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_tag_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_tag_show', { 'id': entity.id }) }}">Показать</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_tag_edit', { 'id': entity.id }) }}">Редактировать</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <ul>
        <li>
            <a class="btn btn-outline-primary btn-fw" href="{{ path('admin_tag_new') }}">
                Создать запись
            </a>
        </li>
    </ul>
{% endblock %}